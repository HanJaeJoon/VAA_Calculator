                `)
                .prop('disabled', true);

            let format = date.toISOString().split('T')[0];

            fetch(`./api/calculate/${format}`)
                .then(response => response.json())
                .then(data => {
                    let result = data.quote;

                    drawHistroy(data);

                    if (result) {
                        $('#spanDate').text(format);
                        $('#quote').text(result);
                        $('#divResult').removeClass('d-none');
                    } else {
                        alert('ì—ëŸ¬ ë°œìƒ ^^');
                    }
